{
    "name": "andreavadacchino/born-to-ride-booking",
    "description": "Advanced WordPress booking plugin with comprehensive test suite",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Andrea Vadacchino",
            "email": "andrea@labuix.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "yoast/phpunit-polyfills": "^1.1",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.6",
        "fakerphp/faker": "^1.23",
        "symfony/dom-crawler": "^6.3",
        "symfony/css-selector": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "BornToRideBooking\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BornToRideBooking\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=unit",
        "test:integration": "phpunit --testsuite=integration",
        "test:functional": "phpunit --testsuite=functional",
        "test:security": "phpunit --testsuite=security",
        "test:performance": "phpunit --testsuite=performance",
        "test:coverage": "phpunit --coverage-html coverage/",
        "test:coverage-text": "phpunit --coverage-text",
        "cs": "phpcs --standard=WordPress includes/ admin/ --ignore=lib/",
        "cs:fix": "phpcbf --standard=WordPress includes/ admin/ --ignore=lib/",
        "analyse": "phpstan analyse includes/ admin/ --level=8",
        "test:all": [
            "@cs",
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}