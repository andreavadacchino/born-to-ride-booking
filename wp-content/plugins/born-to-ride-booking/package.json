{
  "name": "born-to-ride-booking",
  "version": "1.0.253",
  "description": "Advanced WordPress booking plugin with comprehensive test suite",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint:js": "eslint assets/js/**/*.js",
    "lint:fix": "eslint assets/js/**/*.js --fix",
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch"
  },
  "keywords": [
    "wordpress",
    "booking",
    "plugin",
    "born-to-ride"
  ],
  "author": "Andrea Vadacchino",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@wordpress/eslint-plugin": "^17.0.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "tests/JavaScript"
    ],
    "collectCoverageFrom": [
      "assets/js/**/*.js",
      "!assets/js/**/*.min.js",
      "!assets/js/lib/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/JavaScript/**/*.test.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "<rootDir>/tests/JavaScript/__mocks__/styleMock.js"
    }
  },
  "eslintConfig": {
    "extends": [
      "plugin:@wordpress/eslint-plugin/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "jquery": true,
      "jest": true
    },
    "globals": {
      "wp": true,
      "ajaxurl": true,
      "btr_ajax": true,
      "btr_params": true
    },
    "rules": {
      "no-console": "warn",
      "no-debugger": "error"
    }
  }
}
